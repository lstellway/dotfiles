brew "crane"
brew "docker-compose"
brew "fd"
brew "ffmpeg"
brew "fzf"
brew "git"
brew "gnupg"
brew "go"
brew "grep"
brew "hledger"
brew "ipcalc"
brew "jq"
brew "k9s"
brew "kubernetes-cli"
brew "node"
brew "nvm"
brew "pandoc"
brew "pnpm"
# @see https://podman.io/docs/installation#macos
brew "podman"
brew "podman-compose"
brew "ripgrep"
brew "shellcheck"
brew "skopeo"
brew "vim"
brew "yt-dlp"

cask "anytype"
cask "discord"
cask "docker"
cask "element", args: { require_sha: false }
cask "fly"
cask "focusrite-control"
cask "keepassxc"
cask "notion"
cask "openoffice"
cask "plexamp"
cask "podman-desktop"
cask "readwise-ibooks", args: { require_sha: false }
